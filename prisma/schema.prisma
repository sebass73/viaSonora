// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  OWNER
  CLIENT
}

enum StaffRole {
  NONE
  OPERATOR
  ADMIN
}

enum PostStatus {
  PENDING_APPROVAL
  APPROVED
  REJECTED
  BANNED
  EXPIRED
}

enum InstrumentCondition {
  EXCELLENT
  GOOD
  FAIR
  POOR
}

model User {
  id        String   @id @default(cuid())
  name      String?
  lastName  String?
  email     String   @unique
  emailVerified DateTime?
  password  String?  // Para autenticación con email/contraseña (hasheada)
  image     String?
  phone     String?
  whatsappUrl String?
  
  addressText String?
  locationText String? // zona/barrio
  lat         Float?
  lng         Float?
  
  roles     UserRole[] @default([])
  staffRole StaffRole @default(NONE)
  
  onboardingCompleted Boolean   @default(false)
  termsAcceptedAt     DateTime?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // NextAuth relations
  accounts Account[]
  sessions Session[]
  
  // Relations
  instruments Instrument[]
  posts       Post[]
  
  @@index([email])
}

// NextAuth required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Category {
  id          String   @id @default(cuid())
  name        String   @unique
  nameEs      String
  nameIt      String
  nameEn      String
  slug        String   @unique
  description String?
  icon        String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  instruments Instrument[]
  
  @@index([slug])
}

model Instrument {
  id          String   @id @default(cuid())
  ownerId    String
  title       String
  description String   @db.Text
  categoryId  String
  brand       String?
  model       String?
  condition   InstrumentCondition
  extras      String?  @db.Text
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  owner    User              @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  category Category          @relation(fields: [categoryId], references: [id])
  photos   InstrumentPhoto[]
  locations InstrumentLocation[]
  posts    Post[]
  
  @@index([ownerId])
  @@index([categoryId])
}

model InstrumentPhoto {
  id           String   @id @default(cuid())
  instrumentId String
  url          String
  order        Int      @default(0)
  
  createdAt DateTime @default(now())
  
  instrument Instrument @relation(fields: [instrumentId], references: [id], onDelete: Cascade)
  
  @@index([instrumentId])
}

model InstrumentLocation {
  id          String   @id @default(cuid())
  instrumentId String
  city        String
  areaText    String?  // zona/barrio
  lat         Float
  lng         Float
  isPrimary   Boolean  @default(false)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  instrument Instrument @relation(fields: [instrumentId], references: [id], onDelete: Cascade)
  
  @@index([instrumentId])
  @@index([city])
}

model Post {
  id          String    @id @default(cuid())
  instrumentId String
  ownerId     String
  city        String
  areaText    String?   // zona/barrio para búsqueda
  status      PostStatus @default(PENDING_APPROVAL)
  expiresAt   DateTime
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  instrument Instrument @relation(fields: [instrumentId], references: [id], onDelete: Cascade)
  owner      User       @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  
  @@index([instrumentId])
  @@index([ownerId])
  @@index([status])
  @@index([city])
  @@index([expiresAt])
}

